<%= content_for :title do @title end %>
<%= content_for :page_description do @description end %>
<%= content_for :page_image do asset_url("sustainable-manifesto-illustration.jpg") end %>

<div class="px-6 py-16 lg:px-8">
  <div class="mx-auto max-w-3xl text-base/7 text-gray-700 dark:text-gray-400">
    <div class="principle-content">
      <%= @html_content.html_safe %>
    </div>
    <div class="mt-10 flex items-center gap-x-6">
      <%= link_to "Sign the Manifesto", sign_path, class: "rounded-md bg-teal-600 px-3.5 py-2.5 text-sm font-semibold text-white dark:text-gray-200 shadow-sm hover:bg-teal-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-600" %>
      <%= link_to root_path, class: "text-sm/6 font-semibold text-gray-900 dark:text-gray-200" do %>
        <span aria-hidden="true">←</span> Back to Manifesto
      <% end %>
    </div>
    <div class="mt-10 flex items-center justify-between gap-x-6">
      <% if @previous_principle_id %>
        <%= link_to principle_path(@previous_principle_id), class: "text-sm/6 font-semibold text-gray-900 dark:text-gray-200" do %>
          <span aria-hidden="true">←</span> Previous Principle
        <% end %>
      <% else %>
        <span></span>
      <% end %>

      <% if @next_principle_id %>
        <%= link_to principle_path(@next_principle_id), class: "text-sm/6 font-semibold text-gray-900 dark:text-gray-200" do %>
          Next Principle <span aria-hidden="true">→</span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
