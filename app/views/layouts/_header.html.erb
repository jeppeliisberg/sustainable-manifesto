<header class="sticky top-0 z-50 bg-white/90 dark:bg-slate-900/90 backdrop-blur-sm shadow-sm">
  <div class="px-6 lg:px-8">
    <div class="mx-auto max-w-3xl">
      <nav class="flex items-center justify-between py-6" aria-label="Global">
        <div class="flex gap-x-8">
          <%= nav_link_to "Manifesto", root_path %>
          <%= nav_link_to "Resources", resources_path %>
          <%= nav_link_to "Signatures", signatures_path %>
        </div>
        <div>
          <%= link_to sign_path, class: "rounded-md bg-teal-600 px-3.5 py-2 text-sm font-semibold text-white dark:text-gray-200 shadow-sm hover:bg-teal-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-600 whitespace-nowrap" do %>
            <span class="sm:hidden">Sign</span>
            <span class="hidden sm:inline">Sign the Manifesto</span>
          <% end %>
        </div>
      </nav>
    </div>
  </div>
</header>
