<h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">Tell us a bit more</h2>

<%= form_with model: signature, url: signature_path(signature), method: :patch, data: { turbo_frame: "signature_form" } do |f| %>
  <input type="hidden" name="current_step" value="details" />

  <div class="mb-4">
    <label for="signature_title" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
      Job Title <span class="text-gray-500 dark:text-gray-400 font-normal">(optional)</span>
    </label>
    <%= f.text_field :title, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 dark:bg-slate-700 dark:text-gray-100 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent", placeholder: "Software Engineer" %>
  </div>

  <div class="mb-4">
    <label for="signature_organization" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
      Organization <span class="text-gray-500 dark:text-gray-400 font-normal">(optional)</span>
    </label>
    <%= f.text_field :organization, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 dark:bg-slate-700 dark:text-gray-100 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent", placeholder: "Acme Corp" %>
  </div>

  <div class="mb-4">
    <label for="signature_profile_url" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
      Profile URL <span class="text-gray-500 dark:text-gray-400 font-normal">(optional)</span>
    </label>
    <%= f.url_field :profile_url, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 dark:bg-slate-700 dark:text-gray-100 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent", placeholder: "https://github.com/yourusername" %>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">This will be linked to your name on the public signature list (e.g., LinkedIn, GitHub, personal website).</p>
  </div>

  <div class="mb-4">
    <%= f.submit "Sign the manifesto", class: "bg-teal-600 text-white dark:text-gray-100 px-6 py-2 rounded-lg hover:bg-teal-700 transition-colors w-full cursor-pointer text-center" %>
  </div>
<% end %>

<div class="text-center">
  <% prev = previous_step(:details) %>
  <%= link_to "Go back", prev ? edit_signature_path(signature, step: prev) : root_path, class: "text-sm text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-gray-100" %>
</div>
