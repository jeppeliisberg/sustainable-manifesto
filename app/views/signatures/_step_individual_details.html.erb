<h2 class="text-2xl font-bold text-gray-900 mb-6">Tell us a bit more</h2>

<%= form_with model: signature, url: signature_path(signature), method: :patch, data: { turbo_frame: "signature_form" } do |f| %>
  <div class="mb-4">
    <label for="signature_title" class="block text-sm font-medium text-gray-700 mb-2">
      Job Title <span class="text-gray-500 font-normal">(optional)</span>
    </label>
    <%= f.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent", placeholder: "Software Engineer" %>
  </div>

  <div class="mb-4">
    <label for="signature_organization" class="block text-sm font-medium text-gray-700 mb-2">
      Organization <span class="text-gray-500 font-normal">(optional)</span>
    </label>
    <%= f.text_field :organization, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent", placeholder: "Acme Corp" %>
  </div>

  <div class="mb-4">
    <label for="signature_profile_url" class="block text-sm font-medium text-gray-700 mb-2">
      Profile URL <span class="text-gray-500 font-normal">(optional)</span>
    </label>
    <%= f.url_field :profile_url, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent", placeholder: "https://github.com/yourusername" %>
    <p class="mt-1 text-sm text-gray-500">LinkedIn, GitHub, personal website, etc.</p>
  </div>

  <div class="mb-4">
    <%= f.submit "Sign the Manifesto", class: "bg-teal-600 text-white px-6 py-2 rounded-lg hover:bg-teal-700 transition-colors w-full cursor-pointer text-center" %>
  </div>
<% end %>

<div class="text-center">
  <%= link_to "Go back", root_path, class: "text-sm text-gray-600 hover:text-gray-800", data: { turbo_frame: "_top" } %>
</div>
