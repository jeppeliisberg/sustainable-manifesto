<h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">Are you signing as an individual or organization?</h2>

<% if signature.errors.any? %>
  <div class="mb-4 p-4 bg-red-50 dark:bg-red-900/50 border border-red-200 dark:border-red-700 rounded-lg">
    <p class="text-red-800 dark:text-red-200 font-medium"><%= signature.errors.full_messages.first %></p>
  </div>
<% end %>

<%= form_with model: signature, url: signature_path(signature), method: :patch, data: { turbo_frame: "signature_form" } do |f| %>
  <input type="hidden" name="current_step" value="signature_type" />

  <div class="space-y-4 mb-6">
    <label class="flex items-center p-4 border-2 border-gray-300 dark:border-gray-600 rounded-lg cursor-pointer hover:border-teal-500 dark:hover:border-teal-400 transition-colors">
      <%= f.radio_button :signature_type, "individual", class: "w-4 h-4 text-teal-600 focus:ring-teal-500", checked: signature.individual? %>
      <span class="ml-3">
        <span class="block text-lg font-medium text-gray-900 dark:text-gray-100">Individual</span>
        <span class="block text-sm text-gray-600 dark:text-gray-400">I'm signing as myself</span>
      </span>
    </label>

    <label class="flex items-center p-4 border-2 border-gray-300 dark:border-gray-600 rounded-lg cursor-pointer hover:border-teal-500 dark:hover:border-teal-400 transition-colors">
      <%= f.radio_button :signature_type, "organization", class: "w-4 h-4 text-teal-600 focus:ring-teal-500", checked: signature.organization? %>
      <span class="ml-3">
        <span class="block text-lg font-medium text-gray-900 dark:text-gray-100">Organization</span>
        <span class="block text-sm text-gray-600 dark:text-gray-400">I'm signing on behalf of my organization</span>
      </span>
    </label>
  </div>

  <div class="mb-4">
    <%= f.submit "Continue", class: "bg-teal-600 text-white dark:text-gray-100 px-6 py-2 rounded-lg hover:bg-teal-700 transition-colors w-full cursor-pointer text-center" %>
  </div>
<% end %>

<div class="text-center">
  <%= link_to "Go back", root_path, class: "text-sm text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-gray-100", data: { turbo_frame: "_top" } %>
</div>
